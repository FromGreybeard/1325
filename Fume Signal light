    <div class="signal-container">
        <div class="signal">
            
            <div id="upArrow" class="light">
                <svg class="arrow-svg" viewBox="0 0 50 70">
                    <path class="arrow-path" d="M 25,0 L 45,30 L 35,30 L 35,70 L 15,70 L 15,30 L 5,30 Z"/>
                </svg>
            </div>
            
            <div id="circleRed" class="light">
                <div class="circle-shape"></div>
            </div>
            
            <div id="backArrow" class="light">
                <svg class="arrow-svg" viewBox="0 0 50 70">
                    <path class="arrow-path" d="M 25,0 L 45,30 L 35,30 L 35,70 L 15,70 L 15,30 L 5,30 Z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="controls">
        <h3>Change Signal State:</h3>
        <button onclick="setSignal('off')">1. No Signal</button>
        <button onclick="setSignal('steady-green-up')">2. Steady Green Up</button>
        <button onclick="setSignal('flashing-green-up')">3. Flashing Green Up</button>
        <button onclick="setSignal('steady-red')">4. Steady Red</button>
        <button onclick="setSignal('steady-green-back')">5. Steady Green Backward</button>
    </div>

    <div id="statusBox">
        <marquee id="statusMarquee" behavior="scroll" direction="left" scrollamount="4">
            <span id="marqueeText">Welcome to the Signal Simulation. Choose a state.</span>
        </marquee>
        <span id="defaultText">Welcome to the Signal Simulation. Choose a state.</span>
    </div>

    <script>
        // --- JAVASCRIPT LOGIC (Internal) ---

        // Get all signal container elements
        const upArrowLight = document.getElementById('upArrow');
        const circleRedLight = document.getElementById('circleRed');
        const backArrowLight = document.getElementById('backArrow');
        const statusMarquee = document.getElementById('statusMarquee');
        const marqueeTextSpan = document.getElementById('marqueeText');
        const defaultTextSpan = document.getElementById('defaultText');

        // All classes that define an active state or animation
        const activeClasses = ['active-green', 'active-red', 'flashing-green'];

        /**
         * Clears all active and flashing classes from all signal elements.
         */
        function clearAllSignals() {
            upArrowLight.classList.remove(...activeClasses);
            circleRedLight.classList.remove(...activeClasses);
            backArrowLight.classList.remove(...activeClasses);
        }

        /**
         * Updates the scrolling text area.
         * @param {string} text - The message to display.
         * @param {boolean} isSpecial - If true, use red styling and continuous scroll.
         */
        function updateStatusMarquee(text, isSpecial = false) {
            marqueeTextSpan.textContent = text;
            
            if (isSpecial) {
                // For special note, make the text red and start the marquee
                marqueeTextSpan.classList.add('error-text');
                defaultTextSpan.style.display = 'none';
                statusMarquee.style.display = 'block';
                statusMarquee.start();
            } else {
                // For default messages, stop the marquee and hide it
                marqueeTextSpan.classList.remove('error-text');
                defaultTextSpan.textContent = text; // Update the static text
                defaultTextSpan.style.display = 'block';
                statusMarquee.style.display = 'none';
                statusMarquee.stop();
            }
        }

        /**
         * Sets the traffic signal to one of the five specified states.
         * @param {string} state - The desired signal state.
         */
        function setSignal(state) {
            clearAllSignals();

            switch (state) {
                case 'off':
                    updateStatusMarquee("Signal is OFF.");
                    break;

                case 'steady-green-up':
                    upArrowLight.classList.add('active-green');
                    updateStatusMarquee("Steady Green: Proceed with caution");
                    break;

                case 'flashing-green-up':
                    upArrowLight.classList.add('flashing-green');
                    updateStatusMarquee("Flashing Green: Prepare to Stop");
                    break;

                case 'steady-red':
                    circleRedLight.classList.add('active-red');
                    updateStatusMarquee("Steady RED: STOP.");
                    break;

                case 'steady-green-back':
                    // Activate the signal light
                    backArrowLight.classList.add('active-green');
                    
                    // Display the required moving operational note
                    const shunterNote = "ðŸš¨ OPERATIONAL NOTE ðŸš¨ CALL THE SHUNTER TO TAKE THE AUTHORITY TO PROPEL THE TRAIN. ðŸš¨ OPERATIONAL NOTE ðŸš¨";
                    updateStatusMarquee(shunterNote, true); // True flag activates moving text
                    break;
            }
        }

        // Initialize to the "No Signal" state when the page loads
        setSignal('off');
    </script>
</body>
</html>
